<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/background_material_dark" >


    <Button
        android:id="@+id/button_start_stop_timer"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:text="@string/start_button_start_string"
        android:textSize="40sp"
        android:background="@drawable/round_button_green"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textview_work_day_started"
        android:textColor="@color/button_material_light"
        android:id="@+id/textView1"
        android:layout_below="@+id/button_start_stop_timer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView_work_started"
        android:layout_toStartOf="@+id/textView_work_started"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textview_time_template"
        android:textColor="@color/button_material_light"
        android:id="@+id/textView_work_started"
        android:paddingLeft="20dp"
        android:layout_below="@+id/button_start_stop_timer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textview_work_day_ended"
        android:textColor="@color/button_material_light"
        android:id="@+id/textView2"
        android:textStyle="italic"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textview_time_template"
        android:textColor="@color/button_material_light"
        android:id="@+id/textView_work_ended"
        android:paddingLeft="20dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toEndOf="@+id/textView1" />

    <Button
        android:id="@+id/button_lunch_start_stop"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="@string/start_button_start_string"
        android:textSize="25sp"
        android:background="@drawable/round_button_green"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textview_lunch_started"
        android:textColor="@color/button_material_light"
        android:id="@+id/textView3"
        android:textStyle="italic"
        android:layout_below="@+id/textView_lunch_started"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textview_time_template"
        android:textColor="@color/button_material_light"
        android:id="@+id/textView_lunch_started"
        android:paddingLeft="20dp"
        android:layout_above="@+id/textView_lunch_ended"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textview_lunch_ended"
        android:textColor="@color/button_material_light"
        android:id="@+id/textView4"
        android:textStyle="italic"
        android:layout_above="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_start_stop_timer"
        android:layout_alignEnd="@+id/button_start_stop_timer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textview_time_template"
        android:textColor="@color/button_material_light"
        android:id="@+id/textView_lunch_ended"
        android:paddingLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_lunch_start_stop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
